<%= form_for(@link) do |f| %>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Edit link</h3>
  </div>
  <div class="modal-body">

      <%= render 'shared/error_messages', object: @link %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>

      <%= f.label :rlink %>
